<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_test4"
    tools:context=".general_activity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Все дисциплины"
        android:textColor="#FF3700B3"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/allDisciplines_button"
        app:layout_constraintStart_toStartOf="@+id/allDisciplines_button"
        app:layout_constraintTop_toBottomOf="@+id/allDisciplines_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Новости"
        android:textColor="#FF3700B3"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@id/newsButton"
        app:layout_constraintStart_toStartOf="@id/newsButton"
        app:layout_constraintTop_toBottomOf="@id/newsButton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Расписание"
        android:textColor="#FF3700B3"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@id/timetable_button"
        app:layout_constraintStart_toStartOf="@id/timetable_button"
        app:layout_constraintTop_toBottomOf="@id/timetable_button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Безопасность"
        android:textColor="#FF3700B3"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@id/safetyButton"
        app:layout_constraintStart_toStartOf="@id/safetyButton"
        app:layout_constraintTop_toBottomOf="@id/safetyButton" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="Актуальные события"
        android:textColor="#FF3700B3"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@id/events_button"
        app:layout_constraintStart_toStartOf="@id/events_button"
        app:layout_constraintTop_toBottomOf="@id/events_button" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alatsi"
        android:text="@string/polls"
        android:textColor="#FF3700B3"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@id/polls_button"
        app:layout_constraintStart_toStartOf="@id/polls_button"
        app:layout_constraintTop_toBottomOf="@id/polls_button" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="283dp"
        android:layout_height="152dp"
        android:background="@drawable/background2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/allDisciplines_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/documents"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        android:clickable="true"
        android:focusable="true"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/timetable_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        android:clickable="true"
        android:focusable="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/newsButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="200dp"
        android:background="@drawable/timetable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/safetyButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/events"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/events_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/performance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/polls_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="200dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/polls_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/exit"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/help"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="86dp"
        android:src="@drawable/ribbon2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>