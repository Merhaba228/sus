<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_test4"
    tools:context=".MainActivity3">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageView9"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="100dp"
        android:background="@android:color/white"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cot_profile"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:scaleType="fitXY"
        android:src="@drawable/top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Куликов Максим Павлович"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lych.ref@gmail.com"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:000082307"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата рождения: 04.07.2003"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:layout_marginTop="8dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:drawableStart="@drawable/performance_book"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:drawablePadding="15dp"
        android:textSize="15sp"
        android:background="@drawable/background_white"
        android:text="@string/perform"
        app:layout_constraintTop_toBottomOf="@id/textView11" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textSize="15sp"
        android:drawableStart="@drawable/documents"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:drawablePadding="15dp"
        android:background="@drawable/background_white"
        android:text="@string/documents"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textSize="15sp"
        android:drawableStart="@drawable/tests"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:drawablePadding="15dp"
        android:background="@drawable/background_white"
        android:text="Мои тесты"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:textSize="15sp"
        android:drawableStart="@drawable/workship"
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:drawablePadding="15dp"
        android:background="@drawable/background_white"
        android:text="Трудоустройство"
        app:layout_constraintTop_toBottomOf="@id/button5" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Назад"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/exitButton2"
        android:layout_width="171dp"
        android:layout_height="48dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Выход"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/messages_white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
         />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/settings_white"
        app:layout_constraintBottom_toTopOf="@id/imageView9"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="-40dp"
        app:layout_constraintStart_toStartOf ="@id/imageView9"
        />


</androidx.constraintlayout.widget.ConstraintLayout>